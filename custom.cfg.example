[buildout]
extends = buildout.cfg
parts += adapter_impl

## Development options
# versions = noversions

[settings]
configuration = default
hostname = localhost
https-port = 5000
log-level = WARN

db-factory = mongodb
mongodb-host = localhost
mongodb-port = 27017
mongodb-dbname = twitcher_db

ows-security = true
ows-proxy = true
ows-proxy-ssl-verify = true
ows-proxy-protected-path = /ows/proxy

wps = true
wps-path = /ows/wps
wps-restapi = true
wps-restapi-path = /

adapter = package.path.to.AdapterImpl

extra-options = adapter_impl.opt1=value1,adapter_impl.opt2=value2

[adapter_impl]
recipe = collective.recipe.cmd
on_update=true
on_install=true
cmds=pip install git+https://github.com/provider/adapter_impl.git#egg=adapter_impl
