[buildout]
extends = buildout.cfg
parts += adapter_impl

## Development options
# versions = noversions

[settings]
hostname = localhost
https-port = 5000
log-level = WARN

wps-restapi = true
adapter = package.path.to.AdapterImpl
restapi-path = /

extra-options = adapter_impl.opt1=value1,adapter_impl.opt2=value2

[adapter_impl]
recipe = collective.recipe.cmd
on_update=true
on_install=true
cmds=pip install git+https://github.com/provider/adapter_impl.git#egg=adapter_impl
